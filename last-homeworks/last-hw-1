#include <iostream>
#include <vector> //std::vector

using namespace std;

class Punkt {
    protected:
    double x;
    double y;


    public:
    Punkt() {
        cout << "Sisesta x: " << endl;
        cin >> x;
        cout << "Sisesta y: " << endl;
        cin >> y;
        cout << "Valisid x-ks " << x << " ja y-ks " << y << endl;
    }

    double saabX(){
        return x;
    }
    double saabY(){
        return y;
    }
    
    double liidetud;
    double punktideLiitmine(Punkt p){
        liidetud.x = x + p.saabX();
        liidetud.y = y + p.saabY();
        return liidetud;        
    }

    double lenght() {
        return x.distanceFrom(y);
    }

};

class ruumiPunkt: public Punkt{
    protected:
    double z;

    public:
    ruumiPunkt(): Punkt(){
        cout << "Sisesta z: " << endl;
        cin >> z;
    }

    double saabZ(){
        return z;
    }
};

int main() {

    Punkt p1;
    Punkt p2;
    p1.saabX();
    p1.saabY();

    double liidetud = p1.punktideLiitmine(p2);

    cout << "Kahe punkti kaugus on " << p1.lenght() << endl;

    ruumiPunkt r1;
    r1.saabZ();

    Punkt array[] = {p1, p2, r1};
    for(int i = 0; i < 2; i++){
        cout << array[i] << endl;
    }

    return 0;
}
